<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="waimai_tab">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/tab_textcolor_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/waimai_shop_list_alpha_bg_color</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="confirmorderUserinfoShown">
        <item name="android:textSize">@dimen/custom_hint</item>
        <item name="android:textColor">@color/custom_hint</item>
        <item name="android:textColorHint">@color/custom_hint</item>
        <item name="android:gravity">right|center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:drawableRight">@drawable/mypage_list_icon_arrow</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="CustomHorizonSplitLineNoLeft">
        <item name="android:background">@color/waimai_shop_list_divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
        <item name="android:layout_marginRight">@dimen/custom_content_lrgap</item>
    </style>
    <style name="CustomHorizonSplitLineNoLeftRight">
        <item name="android:background">@color/waimai_shop_list_divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>
    <style name="AddressaddrInputMtb">
        <item name="android:layout_marginTop">2.5dip</item>
        <item name="android:layout_marginBottom">2.5dip</item>
    </style>
    <style name="NameSexSplitLine">
        <item name="android:background">@color/waimai_shop_list_divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
        <item name="android:layout_marginLeft">50.0dip</item>
    </style>
    <style name="CustomItem">
        <item name="android:textSize">@dimen/custom_title</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/global_border_topbottom</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/custom_item_height</item>
    </style>
    <style name="MenuHorizonSplitLine">
        <item name="android:background">@color/waimai_shop_list_divider</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
    </style>
    
    <!-- LIST --> 
	
	<style name="UITableView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>	
	</style>
	
	<style name="list_container">
		<item name="android:background">@drawable/background_view_rounded_container</item>
	</style>

	<style name="list_item_top">
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:paddingTop">10dip</item>
		<item name="android:paddingBottom">10dip</item>
		<item name="android:paddingLeft">10dip</item>
    	<item name="android:paddingRight">10dip</item>
    	<item name="android:gravity">center_vertical</item>
    	<item name="android:background">@drawable/background_view_rounded_top</item>
	</style>

	<style name="list_item_middle">
		<item name="android:clickable">true</item>
		<item name="android:paddingTop">10dip</item>
		<item name="android:paddingBottom">10dip</item>
		<item name="android:paddingLeft">10dip</item>
    	<item name="android:paddingRight">10dip</item>
    	<item name="android:gravity">center_vertical</item>
    	<item name="android:background">@drawable/background_view_rounded_middle</item>
	</style>

	<style name="list_item_bottom">
		<item name="android:clickable">true</item>
		<item name="android:paddingTop">10dip</item>
		<item name="android:paddingBottom">10dip</item>
		<item name="android:paddingLeft">10dip</item>
    	<item name="android:paddingRight">10dip</item>
    	<item name="android:gravity">center_vertical</item>
    	<item name="android:background">@drawable/background_view_rounded_bottom</item>
	</style>
	
	<style name="list_item_single">
		<item name="android:clickable">true</item>
		<item name="android:paddingTop">10dip</item>
		<item name="android:paddingBottom">10dip</item>
		<item name="android:paddingLeft">10dip</item>
    	<item name="android:paddingRight">10dip</item>
    	<item name="android:gravity">center_vertical</item>
    	<item name="android:background">@drawable/background_view_rounded_single</item>
	</style>	
	
	<style name="list_item_chevron">
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/chevron</item>
        <item name="android:duplicateParentState">true</item>
    </style>	
	
	
	<!-- TEXT -->
	<style name="content_page_large_text">
		<item name="android:duplicateParentState">true</item>
        <item name="android:textSize">16.0dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
	
	<style name="content_page_small_text">
		<item name="android:duplicateParentState">true</item>
        <item name="android:textSize">12.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="content_page_large_count_text">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff8295bf</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8.0dip</item>
    </style>
    
</resources>
