<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/confirmorder_detail_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/confirmorder_free_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/confirmorder_free"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/custom_item_height"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/confirmorder_free_header"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="配送费"
                android:textColor="@color/custom_title"
                android:textSize="@dimen/custom_title" />

            <ImageView
                android:id="@+id/confirmorder_mian_icon"
                android:layout_width="@dimen/custom_icon_size"
                android:layout_height="@dimen/custom_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/custom_icon_gap"
                android:layout_marginRight="@dimen/custom_icon_gap"
                android:scaleType="centerCrop"
                android:src="@drawable/waimai_shoplist_item_icon_mian"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="￥"
                    android:textColor="@color/custom_inputright_gray"
                    android:textSize="@dimen/custom_info" />

                <TextView
                    android:id="@+id/confirmorder_free_shown"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/custom_inputright_gray"
                    android:textSize="@dimen/custom_hint" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>